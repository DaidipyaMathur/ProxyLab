{
  "name": "C++ for ProxyLab",
  // Use a pre-built image with C++ tools
  "image": "mcr.microsoft.com/devcontainers/cpp:1-ubuntu-22.04",

  // --- This is the important part for installing libraries ---
  "features": {
    "ghcr.io/devcontainers/features/cpp-home-vcpkg:1": {
        "packages": "boost-asio"
    }
  },

  // A command to run after the container is created.
  // This configures CMake to use the vcpkg toolchain.
  "postCreateCommand": "cmake -B build -S . -DCMAKE_TOOLCHAIN_FILE=/usr/local/share/vcpkg-cmake/vcpkg.cmake",

  // Forward the port your proxy will run on
  "forwardPorts": [8080],

  // VS Code extensions to install automatically
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.cpptools-extension-pack",
        "ms-vscode.cmake-tools"
      ]
    }
  }
}
