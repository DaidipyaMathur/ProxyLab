{
  "name": "C++ for ProxyLab",
  "image": "mcr.microsoft.com/devcontainers/cpp:1-ubuntu-22.04",

  // This command runs once when the container is created.
  // It updates the package list and installs our dependencies directly.
  "onCreateCommand": "sudo apt-get update && sudo apt-get install -y build-essential cmake libboost-all-dev libssl-dev",

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.cpptools-extension-pack",
        "ms-vscode.cmake-tools"
      ]
    }
  },

  "forwardPorts": [8080]
}
